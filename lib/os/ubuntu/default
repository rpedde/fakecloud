# -*- mode: shell-script -*-

EXTRA_PACKAGES=${UBUNTU_EXTRA_PACKAGES:-emacs23-nox sudo}

function valid_images() {
    _RETVAL=""
    for release in maverick natty oneiric; do
	_RETVAL+="ubuntu-${release} "
    done
}

function get_mirror() {
    # $1 - dist
    # $2 - release

    _RETVAL=${UBUNTU_MIRROR:-http://mirror.rackspace.com/ubuntu}
}
